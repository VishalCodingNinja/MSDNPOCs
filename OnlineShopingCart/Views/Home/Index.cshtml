@model IEnumerable<Customer>
@{
    ViewBag.Title = "Home Page";
}
@ViewBag.added;
<div class="container">
    <h2>WelCome to Customer Management System</h2>
    <p>All Customers List</p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Customer Details</th>
                <th>See Details</th>
                <th>Update Customer</th>
                <th>Delete Customer</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var customer in Model)
            {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Address</td>
                <td><a asp-action="Details" asp-route-id="@customer.Id" type="button" class="btn btn-success">Details</a></td>
                <td><a asp-action="EditCustomer" asp-route-id="@customer.Id" type="button" class="btn btn-success">Edit </a></td>
                <td><a asp-action="DeleteCustomer" asp-route-id="@customer.Id" type="button" class="btn btn-success">Delete </a></td>

                
            </tr>

            }

        </tbody>
    </table>
    <a asp-action="AddCustomer"  type="button" class="btn btn-success">CreateCustomer</a>
</div>



